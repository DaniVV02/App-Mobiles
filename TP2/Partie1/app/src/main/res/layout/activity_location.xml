<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/back2">

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🔍 Localisation en cours..."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="20dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/buttonOpenMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📍 Ouvrir Google Maps"
        android:padding="10dp"
        android:enabled="false"/>

    <Button
        android:id="@+id/btnRetourAccueil"
        android:layout_width="366dp"
        android:layout_height="42dp"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/options_style"
        android:backgroundTint="#AAF1FA"
        android:text="@string/ret_accueil" />
</LinearLayout>
