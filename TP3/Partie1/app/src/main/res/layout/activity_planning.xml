<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/round_corner_general"
        android:padding="20dp"
        android:layout_margin="10dp"
        >

        <ImageView
            android:layout_width="104dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:src="@drawable/planing_icon" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nouveau planning"
            android:textAlignment="center"
            android:textColor="#4A4F53"
            android:textSize="28sp"
            android:textStyle="italic"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JOUR"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/dm_sans"/>

        <EditText
            android:id="@+id/etJour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mardi"
            android:background="@drawable/round_corner"
            android:textColorHint="#AEABAB"
            android:layout_margin="8dp"
            android:padding="15dp"
            android:backgroundTint="#30B1AEAE"
            android:textSize="16dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08h-10h"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/dm_sans"/>

        <EditText
            android:id="@+id/etCreneau1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cours HAI813I"
            android:background="@drawable/round_corner"
            android:textColorHint="#AEABAB"
            android:layout_margin="8dp"
            android:padding="15dp"
            android:backgroundTint="#30B1AEAE"
            android:textSize="16dp"
            android:textStyle="italic" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10h-12h"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/dm_sans" />

        <EditText
            android:id="@+id/etCreneau2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Réunion TER"
            android:background="@drawable/round_corner"
            android:textColorHint="#AEABAB"
            android:layout_margin="8dp"
            android:padding="15dp"
            android:backgroundTint="#30B1AEAE"
            android:textSize="16dp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="14h-16h"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/dm_sans"/>
        <EditText
            android:id="@+id/etCreneau3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TP HAI811I"
            android:background="@drawable/round_corner"
            android:textColorHint="#AEABAB"
            android:layout_margin="8dp"
            android:padding="15dp"
            android:backgroundTint="#30B1AEAE"
            android:textSize="16dp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16h-18h"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/dm_sans"/>

        <EditText
            android:id="@+id/etCreneau4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sport"
            android:background="@drawable/round_corner"
            android:textColorHint="#AEABAB"
            android:layout_margin="8dp"
            android:padding="15dp"
            android:backgroundTint="#30B1AEAE"
            android:textSize="16dp"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btnAfficherPlanning"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_corner_general"
                android:backgroundTint="#E0BE57"
                android:fontFamily="@font/poppins_bold"
                android:padding="10dp"
                android:text="Voir mes plannings"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_margin="6dp"/>

            <Button
                android:id="@+id/btnValiderPlanning"
                android:layout_width="137dp"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_corner_general"
                android:backgroundTint="#212020"
                android:fontFamily="@font/poppins_bold"
                android:text="Valider"
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:padding="10dp"
                />


        </LinearLayout>

        <Button
            android:id="@+id/btnDeconnexion"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="13dp"
            android:background="@drawable/round_corner_general"
            android:backgroundTint="#9e1b1b"
            android:fontFamily="@font/poppins_bold"
            android:padding="15dp"
            android:text="Se déconnecter"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnVoirListe"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/round_corner_general"
            android:backgroundTint="@color/purple_200"
            android:fontFamily="@font/poppins_bold"
            android:padding="15dp"
            android:text="Voir la liste des utilisateurs"
            android:textColor="@color/white" />



    </LinearLayout>
</ScrollView>